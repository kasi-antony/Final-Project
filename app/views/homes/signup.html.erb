<div class="main_div_for_signup">
    <div class="circle_div"></div>
    <div class="circle_div2"></div>
    <div class="signup_main">
        <div class="logo_div" id="logo_div">
            LOOKING <span class="logo_for_span" id="logo_for_span">FOR</span>
            <div class="logo_content">
                <h1>Welcome Back!</h1>
                To keep connected with us please login with your personal info
            </div>
            <div class="have_an_account">
                    <a href="/homes/login">Sign in</a>
                </div>
        </div>
        
        <div class="login_content">
            <div class="signup_heading">
                <h1>Sign up</h1>
            </div>
            <div>
            <form action="/homes/create" method="post">

                <input
      type="hidden"
      name="authenticity_token"
      value="<%= form_authenticity_token %>"
    />
    <% if flash[:error]%><p class = "flash-error"><%= flash[:error]%></p><%end%>
                <div class="input">
                    <i class="fa-solid fa-user"></i>
                    <input type="text" placeholder="Name" name="user[name]">
                    </div>
                    <div class="input">
                        <i class="fa-solid fa-phone"></i>
                        <input type="text" placeholder="Contact" name="user[contact_number]">
                        </div>
                        <div class="input">
                            <i class="fa-solid fa-envelope"></i>
                            <input type="email" placeholder="Email" name="user[email]">
                            </div>
                            <div class="input">
                                <i class="fa-solid fa-lock"></i>
                                <input type="password" placeholder="Password" name="user[password]" >
                                </div>
                                <div class="submit_button">
                                    <button class="sub" type="submit">continue</button>
                                </div>
            </form>
        </div>
            </div>
    </div>
</div>